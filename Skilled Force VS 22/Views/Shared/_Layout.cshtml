<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skilled Force</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="@Url.Content("~/css/JobList.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

</head>
<body>
    @if (@Context.Session.GetString("FirstName") != null)
    {
        var RoleId = @Context.Session.GetString("RoleId");
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Skilled_Force</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            @if (@Context.Session.GetString("RoleId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@((RoleId.Equals("2") || RoleId.Equals("3")) ? "Manage Jobs" : "Home")</a>
                                </li>
                                @if (RoleId.Equals("2"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Job" asp-action="JobPostForm">Post Job</a>
                                    </li>
                                }
                                @if (RoleId.Equals("3"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="GetRecruiters">Manage Users</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="GetCompanyDetails">Company Details</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Chat" asp-action="GetChatList">Messages</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="GetAccountDetails">Profile</a>
                                </li>
                                
                                @if (RoleId.Equals("1"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="JobApplicant" asp-action="UserJobApplicationsList">Job Applications</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="navbar-right">
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { id = "roles", @class = "pull-right btn btn-primary" } )
                    </div>
                    @if (RoleId.Equals("0"))
                    {
                        <div class="navbar-right">
                            @Html.ActionLink("Login", "LoginForm", "Account", null, new { id = "roles", @class = "pull-right btn btn-primary" } )
                        </div>
                    }
                </div>
            </nav>
        </header>
    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Skilled_Force</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-right">
                        @Html.ActionLink("Login", "LoginForm", "Account", null, new { id = "roles", @class = "pull-right btn btn-primary" } )
                    </div>
                </div>
            </nav>
        </header>
        <div class="container text-center pt-3">
            <h2 >Welcome to Skilled Force</h2>
        </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted navbar fixed-bottom">
        <div class="container">
            &copy; 2022 - Skilled_Force - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
 body {
      background-image: url('/images/project_bg.jpg'); height: 100vh; background-size: contain;
  }
</style>
