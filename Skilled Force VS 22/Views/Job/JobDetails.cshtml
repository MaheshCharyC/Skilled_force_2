@model Job


@{
    ViewData["Title"] = "Skilled Force Job post page";
}
<div class="container py-5 h-100">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="col-sm-12">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div>
                        <h3 class="mb-5">
                            @Model.Title for
                            @Html.ActionLink(ViewData["companyName"].ToString(), "GetCompanyDetails", "Company", new { @Model.CompanyId }, new { @class = "" } )
                        </h3>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="text-left" style="text-align: left">
                                    <h5>Who we are</h5>
                                    <p class="pb-3">@ViewData["companyDesc"].ToString()</p>

                                    <h5>What we are looking for</h5>
                                    <p class="pb-3">@Model.Description</p>

                                    <h5>Position</h5>
                                    <p class="pb-3">@Model.JobType </p>

                                    <h5>Employment Type</h5>
                                    <p class="pb-3">@Model.EmploymentType </p>
                                </div>
                            </div>
                            <div class="col-md-4" style="text-align:left">
                                <h5>Location</h5>
                                <p class="pb-3">@Model.Location</p>

                                <h5>Salary</h5>
                                <p class="pb-3">@Model.Salary</p>
                                <h5>Recruter</h5>
                                <p class="pb-3">
                                    @Html.ActionLink(Model.CreatedBy.FullName, "GetAccountDetails", "Account", new { UserId=@Model.CreatedByUserId }, new { @class = "" } )
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (@Model.IsApplied)
                        {
                            @Html.ActionLink("Cancel application", "JobCancel", "Job", new { @Model.JobId }, new { @class = "btn btn-primary btn-lg btn-block mb-4 col-sm-4 offset-sm-4" } )
                        }
                        else
                        {
                            @Html.ActionLink("Apply now", "JobApply", "Job", new { @Model.JobId }, new { @class = "btn btn-primary btn-lg btn-block mb-4 col-sm-4 offset-sm-4" } )
                        }
                    </div>
                    <div class="row">
                        <button class="btn btn-primary btn-lg btn-block mb-4 col-sm-4 offset-sm-4" type="button" onclick="goPrev()">Go back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function goPrev()
    {
        window.history.back();
    }
</script>